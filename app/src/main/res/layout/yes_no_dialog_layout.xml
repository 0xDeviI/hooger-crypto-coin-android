<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/loading_dialog_back"
    android:gravity="center"
    android:layout_marginRight="30dp"
    android:layout_marginLeft="30dp"
    android:elevation="5dp"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:maxWidth="350dp"
    android:maxHeight="400dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_title"
            android:textColor="@color/white"
            android:padding="5dp"
            android:background="@drawable/dialog_title_header_background"
            android:fontFamily="@font/iransansmobile_bold"
            android:layout_width="match_parent"
            android:justificationMode="inter_word"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/dialog_message"
            android:textColor="@color/white"
            android:padding="10dp"
            android:justificationMode="inter_word"
            android:fontFamily="@font/iransansmobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/dialog_accept"
                android:layout_width="wrap_content"
                android:text="بله"
                android:textColor="@android:color/holo_green_light"
                android:layout_margin="5dp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:fontFamily="@font/iransansmobile_black"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/dialog_reject"
                android:layout_width="wrap_content"
                android:text="خیر"
                android:textColor="@android:color/holo_red_light"
                android:layout_margin="5dp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:fontFamily="@font/iransansmobile_black"
                android:layout_height="wrap_content"/>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>